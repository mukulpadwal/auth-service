{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "es2020",
    "types": ["node", "vitest/globals"],
    "lib": ["ESNext"],
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "isolatedModules": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "coverage", "**/*.spec.ts", "tests"]
}