{
    "name": "auth-service",
    "version": "1.0.0",
    "description": "auth-service",
    "license": "ISC",
    "author": "Mukul Padwal <mukulpadwal.me@gmail.com>",
    "type": "module",
    "main": "index.js",
    "scripts": {
        "start": "cross-env NODE_ENV=prod node dist/server.js",
        "dev": "cross-env NODE_ENV=dev tsx --watch src/server.ts",
        "format:check": "npx prettier . --check",
        "format:fix": "npx prettier . --write",
        "lint:check": "npx eslint .",
        "lint:fix": "npx eslint . --fix",
        "type-check": "tsc --noEmit",
        "build": "tsc",
        "prepare": "husky",
        "test": "cross-env NODE_ENV=test vitest run",
        "coverage": "cross-env NODE_ENV=test vitest run --coverage",
        "generate:prisma": "npx prisma generate",
        "db:migrate:dev": "cross-env NODE_ENV=dev node scripts/prisma.js migrate dev",
        "db:migrate:test": "cross-env NODE_ENV=test node scripts/prisma.js migrate reset --force --skip-generate",
        "db:migrate:prod": "cross-env NODE_ENV=prod node scripts/prisma.js migrate deploy",
        "db:push:dev": "cross-env NODE_ENV=dev node scripts/prisma.js db push",
        "db:push:test": "cross-env NODE_ENV=test node scripts/prisma.js db push"
    },
    "devDependencies": {
        "@eslint/js": "^9.34.0",
        "@types/bcrypt": "^6.0.0",
        "@types/cookie-parser": "^1.4.9",
        "@types/cors": "^2.8.19",
        "@types/express": "^5.0.3",
        "@types/http-errors": "^2.0.5",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/node": "^24.3.0",
        "@types/supertest": "^6.0.3",
        "@vitest/coverage-istanbul": "^3.2.4",
        "@vitest/coverage-v8": "^3.2.4",
        "cross-env": "^10.0.0",
        "eslint": "^9.34.0",
        "husky": "^9.1.7",
        "lint-staged": "^16.1.5",
        "mock-jwks": "^3.3.5",
        "prettier": "3.6.2",
        "prisma": "^6.16.1",
        "supertest": "^7.1.4",
        "tsx": "^4.20.5",
        "typescript": "^5.9.2",
        "typescript-eslint": "^8.41.0",
        "vitest": "^3.2.4"
    },
    "lint-staged": {
        "*.ts": [
            "npm run lint:fix",
            "npm run format:fix"
        ]
    },
    "dependencies": {
        "@prisma/client": "^6.16.1",
        "bcrypt": "^6.0.0",
        "cookie-parser": "^1.4.7",
        "cors": "^2.8.5",
        "dotenv": "^17.2.1",
        "express": "^5.1.0",
        "express-jwt": "^8.5.1",
        "express-validator": "^7.2.1",
        "helmet": "^8.1.0",
        "http-errors": "^2.0.0",
        "jsonwebtoken": "^9.0.2",
        "jwks-rsa": "^3.2.0",
        "pg": "^8.14.1",
        "reflect-metadata": "^0.2.2",
        "rsa-pem-to-jwk": "^1.1.3",
        "winston": "^3.17.0"
    }
}
